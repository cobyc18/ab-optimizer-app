{% comment %}DEBUG: Check what block.settings contains{% endcomment %}
{% if request.design_mode %}
  <!-- DEBUG: block.settings.header_text = {{ block.settings.header_text | json }} -->
  <!-- DEBUG: block.settings.body_text = {{ block.settings.body_text | json }} -->
  <!-- DEBUG: block.settings.text_color = {{ block.settings.text_color | json }} -->
  <!-- DEBUG: block.settings.background_color = {{ block.settings.background_color | json }} -->
{% endif %}

<div class="simple-text-badge-widget" 
     {{ block.shopify_attributes }}
     data-header-text="{{ block.settings.header_text }}"
     data-body-text="{{ block.settings.body_text }}"
     data-text-color="{{ block.settings.text_color }}"
     data-header-color="{{ block.settings.header_color | default: '#0f172a' }}"
     data-background-color="{{ block.settings.background_color | default: '#f5f5f0' }}"
     data-border-color="{{ block.settings.border_color | default: '#d4d4d8' }}"
     data-icon-choice="{{ block.settings.icon_choice | default: 'star' }}"
     data-icon-url="{{ block.settings.icon_url | default: '' }}"
     data-header-font="{{ block.settings.header_font | default: 'system' }}"
     data-header-font-size="{{ block.settings.header_font_size | default: 24 }}"
     data-body-font="{{ block.settings.body_font | default: 'system' }}"
     data-body-font-size="{{ block.settings.body_font_size | default: 16 }}"
     data-inner-padding-x="{{ block.settings.inner_padding_x | default: 24 }}"
     data-inner-padding-y="{{ block.settings.inner_padding_y | default: 16 }}"
     data-inner-padding-x-mobile="{{ block.settings.inner_padding_x_mobile | default: 16 }}"
     data-inner-padding-y-mobile="{{ block.settings.inner_padding_y_mobile | default: 12 }}"
     data-outer-padding-x="{{ block.settings.outer_padding_x | default: 0 }}"
     data-outer-padding-y="{{ block.settings.outer_padding_y | default: 0 }}"
     data-outer-padding-x-mobile="{{ block.settings.outer_padding_x_mobile | default: 0 }}"
     data-outer-padding-y-mobile="{{ block.settings.outer_padding_y_mobile | default: 0 }}"
     data-icon-size="{{ block.settings.icon_size | default: 36 }}"
     data-icon-size-mobile="{{ block.settings.icon_size_mobile | default: 30 }}"
     data-border-radius="{{ block.settings.border_radius | default: 8 }}"
     data-border-thickness="{{ block.settings.border_thickness | default: 1 }}"
     data-hover-effect="{{ block.settings.hover_effect | default: false }}"
     data-drop-shadow="{{ block.settings.drop_shadow | default: 10 }}"
     data-icon-blink="{{ block.settings.icon_blink | default: false }}"
     data-icon-blink-intensity="{{ block.settings.icon_blink_intensity | default: 50 }}"
     data-header-body-spacing="{{ block.settings.header_body_spacing | default: 6 }}"
     data-icon-text-spacing="{{ block.settings.icon_text_spacing | default: 20 }}">
  <!-- Widget content will be rendered by JavaScript -->
</div>

{% schema %}
{
  "name": "Simple Text Badge - OLD",
  "target": "section",
  "stylesheet": "simple-text-badge.css",
  "javascript": "simple-text-badge.js",
  "settings": [
    {
      "type": "richtext",
      "id": "header_text",
      "label": "Header Text",
      "default": "<p></p>"
    },
    {
      "type": "richtext",
      "id": "body_text",
      "label": "Body Text",
      "default": "<p></p>"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#1a5f5f"
    },
    {
      "type": "color_background",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f5f5f0"
    }
  ]
}
{% endschema %}

