      }).then(r => r.json()).then(data => {
        console.log("Logged impression event:", data);
      }).catch(e => {
        console.log("Failed to log impression event", e);
      });
    } else {
      console.log("Impression already logged, skipping...");
    }
    
    console.log("=== A/B TEST DEBUG END ===");
  })();
}

